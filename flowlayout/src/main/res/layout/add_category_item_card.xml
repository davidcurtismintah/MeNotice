<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_category_item_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:elevation="12dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/add_category_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/add_category_label"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Label"
            android:textColor="@color/colorAccent" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/add_category_check_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/category_check_state_bg"
            android:contentDescription="Add Category" />

    </LinearLayout>

</android.support.v7.widget.CardView>
