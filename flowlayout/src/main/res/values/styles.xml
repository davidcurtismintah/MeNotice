<resources>

    <!-- Base application theme. -->
    <style title="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item title="colorPrimary">@color/colorPrimary</item>
        <item title="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item title="colorAccent">@color/colorAccent</item>
    </style>

    <style title="AppTheme.ActionMode" parent="AppTheme">
        <item title="android:windowDisablePreview">true</item>
        <item title="windowActionBar">false</item>
        <item title="android:textColorPrimary">@android:color/white</item>
        <item title="android:textColorSecondary">@android:color/white</item>
        <item title="actionMenuTextColor">@android:color/white</item>
        <item title="android:windowNoTitle">true</item>

        <!--  It should be true otherwise action mode will not overlay toolbar -->
        <item title="windowActionModeOverlay">true</item>

        <!--  For Custom Action Mode Background Color/Drawable -->
        <item title="actionModeBackground">@color/colorPrimary</item>
    </style>

</resources>
